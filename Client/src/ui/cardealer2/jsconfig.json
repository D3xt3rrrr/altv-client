{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@altv"
    ],
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": ["./node_modules/@altv"],
  "exclude": ["node_modules", "**/*.spec.ts", "resources", "**/*.json"]
}
